{
  "name": "hs-deck-tracker",
  "version": "1.0.0",
  "description": "Hearthstone Deck Tracker â€” Real-time card tracking overlay",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -n vite,electron \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "package": "vite build && electron-builder",
    "test": "vitest run"
  },
  "keywords": ["hearthstone", "deck-tracker", "overlay"],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "build": {
    "appId": "com.decktracker.hs",
    "productName": "HS Deck Tracker",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "src/core/**/*",
      "data/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zustand": "^5.0.11"
  }
}
